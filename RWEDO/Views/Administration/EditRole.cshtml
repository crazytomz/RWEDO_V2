@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    ViewBag.Activelink = "admindashboard";
}
<form method="post" class="mt-3">
    <div  class="form-group row">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-header">
                    <h3>Role Claims</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        foreach (var claim in Model.Claims)
                        {
                            <h5 class="card-title">@claim</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="ManageRoleClaims" asp-route-roleId="@Model.Id"
                       style="width:auto" class="btn btn-primary">
                        Manage Claims
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row hidden">
        <div class="col-sm-10">
            <input asp-for="Id" type="hidden" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" autocomplete="off" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="ListRoles" class="btn btn-outline-primary">Back to list</a>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>

