@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_AccountLayout";
}
<div class="face face-front">
    <div class="content">
        <h2>Login</h2>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="field-wrapper">
                <input asp-for="UserName" type="text" autocomplete="off" placeholder="Username" />
                <label asp-for="UserName"></label>
            </div>
            <div class="field-wrapper">
                <input asp-for="Password" autocomplete="off" placeholder="Password"/>
                <label asp-for="Password"></label>
            </div>
            <div class="field-wrapper">
                <input type="submit" value="Login">
            </div>
            <span class="signup">Not a user? <a asp-action="register" asp-controller="account" class="nav-link">Register</a></span>
        </form>
    </div>
</div>
